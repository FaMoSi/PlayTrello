module.exports = (f) -> (req, res) ->
    result = f req
    json = JSON.stringify result
    console.info 'send json', json.substring 0, 100

    # remember: length is the number of bytes not the length of the string
    length = Buffer.byteLength(json, 'utf8')
    res.writeHead 200, {'Content-Type': 'application/json; charset=utf-8', 'Content-Length': length}
    res.write json
    res.end()
