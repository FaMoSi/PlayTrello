{deepSet} = require './utility'
error = require './error-middleware'

module.exports = bind = (name, f) -> (req, res, next) -> f req, (err, result) ->
    return bind.errorCallback req, res, err, name if err?
    req.loaded = deepSet req.loaded or {}, name.split('.'), result
    next()

module.exports.defaultErrorCallback = error
module.exports.errorCallback = error
